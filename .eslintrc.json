{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "no-return-assign": "off",
    "no-multi-assign" : "off",
    "array-callback-return": "off",
    // "no-undef": "off",
    "no-unused-vars": "off",
    "no-use-before-define": "off"
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}